    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- Couleurs des champs EditText -->
        <item name="colorControlNormal">@color/grey</item> <!-- Bordure du champ -->
        <item name="colorControlActivated">@color/white</item> <!-- Couleur active du champ -->
        <item name="android:textColor">@color/white</item> <!-- Texte blanc -->
        <item name="android:textColorHint">@color/white</item> <!-- Texte indicatif gris -->
    </style>

        <style name="FirebaseUI.Text">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:fontFamily">sans-serif</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

        <style name="FirebaseUI.Text.Link">
            <item name="android:textColor">@android:color/white</item>
        </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
